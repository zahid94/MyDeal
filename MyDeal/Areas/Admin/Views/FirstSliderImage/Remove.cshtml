@model MyDeal.Models.FirstSlider

@{
    ViewBag.Title = "Remove";
}

<h2>Remove</h2>
<div>
    <h4>First Slider</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd>
            <img src="/Image/@Url.Content(Model.ImageName)" height="360" width="1000" />
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color float-left">
            <input type="submit" value="Delete" class="dlt btn btn-outline-danger my-2 my-sm-0" />           
        </div>
    }
</div>
<div class="form-group">
    <a href="/admin/HomePageSlider" class="btn btn-outline-success my-2 my-sm-0">Back to Slider</a>
</div>
<script>
    $(".dlt").click(function () {
        if (!confirm("Are You sure want to delete this.")) {
            return false;
        };
    });
</script>
