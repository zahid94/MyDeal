@model IEnumerable<MyDeal.Models.HomePageSlider>

@{
    ViewBag.Title = "Index";
}
<div class="mb-3"></div>
<h2>All Slider Image</h2>

<div class="form-group">
    <a href="/admin/HomePageSlider/Add" class="btn btn-outline-success my-2 my-sm-0">Add New Slider</a>
</div>

@if (!Model.Any())
{
    <h5>There are no any Slider Image.</h5>
}
else
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <img src="/Image/@Url.Content(item.ImageName)" height="100" width="200" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Remove", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}

