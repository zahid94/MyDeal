@model IEnumerable<MyDeal.Models.Category>

@{
    ViewBag.Title = "Index";
}
<div class="mb-3"></div>
<p>
    <a href="/admin/category/AddCategory" class="btn btn-outline-success my-2 my-sm-0">Add New Category</a>
</p>
@if (!Model.Any())
{
    <h4>There are no any Categories.</h4>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCategory", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "RemoveCategory", new { id = item.Id })
                </td>
            </tr>
        }

    </table>    
}

